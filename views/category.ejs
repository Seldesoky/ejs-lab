  <title><%= category %> Menu</title>
</head>
<body>
  <%- include('partials/nav') %>
  <h1><%= category %> Menu</h1>
  <% menuItems.forEach(item => { %>
    <div>
      <h2><%= item.name %> <%= item.rating === 5 ? 'â­' : '' %></h2>
